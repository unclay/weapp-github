<view>
  <view class="profile">
    <view class="profile-hd">
      <view class="profile-avatar__default">
        <text wx:if="{{!profileAvatarLoaded}}" class="iconfont icon-github profile-avatar__default-icon"></text>
        <image class="profile-avatar" src="{{profile.avatar_url}}" bindload="onAvatarUrlLoad"></image>
      </view>
      <view class="profile-name">Sign in to GitHub</view>
    </view>
  </view>
  <view class="weui-tab">
    <view class="weui-navbar">
      <block wx:for-items="{{tabs}}" wx:key="{{index}}">
        <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
        </view>
      </block>
      <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>
    <view class="weui-tab__panel">
      <view class="weui-tab__content" hidden="{{activeIndex != 10}}">
        <view class="weui-cells__title">Username or email</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder=""/>
            </view>
          </view>
        </view>
        <view class="weui-cells__title">Password</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder=""/>
            </view>
          </view>
        </view>
        <view class="weui-btn-area">
          <button class="weui-btn" type="primary" bindtap="clickSignIn">Sign in</button>
        </view>
      </view>
      <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
        <view class="weui-cells__title">Personal Token</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder=""/>
            </view>
          </view>
        </view>
        <view class="weui-btn-area">
          <button class="weui-btn" type="primary" bindtap="showTopTips">Sign in</button>
        </view>
      </view>
      <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
        <view class="weui-panel weui-panel_access">
          <view class="weui-panel__bd">
            <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__title weui-media-box__title_in-text">Setp 1</view>
              <view class="weui-media-box__desc">电脑打开http://127.0.0.1，并授权登录Gitub源</view>
            </view>
            <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__title weui-media-box__title_in-text">Setp 2</view>
              <view class="weui-media-box__desc">打开扫一扫，扫描电脑上的二维码</view>
            </view>
          </view>
        </view>
        <view class="weui-btn-area">
          <button class="weui-btn" type="primary" bindtap="scanQrcode">扫一扫</button>
        </view>
      </view>
    </view>
  </view>
  
</view>