/* repo's header */
.repo-hd {
  background-color: #37373b;
  text-align: center;
}
.repo-avatar {
  margin-top: 60rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  border: 5rpx solid #fff;
}
.repo-name {
  display: block;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 400;
  color: #fff;
}
.repo-desc {
  padding: 5rpx 0 30rpx 0;
  display: block;
  font-size: 30rpx;
  line-height: 28rpx;
  font-weight: 300;
  color: #eee;
}

/* repo's hotspot */
.repo-hotspot__value {
  padding-left: 20rpx;
  color: #555;
  height: 40rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: 400;
}
.repo-hotspot__hint {
  padding-left: 20rpx;
  color: #111;
  height: 40rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  font-weight: 300;
}

