@import '../wemark/wemark.wxss';

/* commititem's header */
.commititem-hd {
  background-color: #37373b;
  text-align: center;
}
.commititem-avatar {
  width: 140rpx;
  height: 140rpx;
}
.commititem-avatar__default {
  display: inline-block;
  margin-top: 60rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  border: 5rpx solid #fff;
  overflow:hidden;
}
.commititem-avatar__default-icon {
  display: inline-block;
  font-size: 140rpx;
  margin-top:-20rpx;
  background-color:#fff;
}
.commititem-name {
  display: block;
  padding-top: 8rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 400;
  color: #fff;
}
.commititem-desc {
  padding: 5rpx 0 30rpx 0;
  display: block;
  font-size: 30rpx;
  line-height: 28rpx;
  font-weight: 300;
  color: #eee;
}

/* commititem's hotspot */
.commititem-hotspot__value {
  padding-left: 20rpx;
  color: #555;
  height: 40rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  font-weight: 400;
}
.commititem-hotspot__hint {
  padding-left: 20rpx;
  color: #111;
  height: 40rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  font-weight: 300;
}

.wemark_box {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 0;
}
.wemark_box .wemark_wrapper {
  margin: 0;
  padding: 0;
}
.wemark_box .wemark_block_p {
  margin: 0;
  padding: 0;
}

/* issues events */
.zhankeng {
  height: 30rpx;
}
.commititem-comments {
  margin-top: 30rpx;
  background-color: #fff;
  border-top: 2rpx solid #D9D9D9;
}
.commititem-comments__item {
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #D9D9D9;
}
.commititem-comments__hd {
  margin-right: 15rpx;
}
.commititem-comments__bd {
  flex: 1;
}
.commititem-github {
  display: inline-block;
  margin-top: -6rpx;
  font-size: 70rpx;
}
.commititem-comments__avatar {
  margin-top: 10rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}
.commititem-comments__title {
  color: #0366d6;
  font-size: 32rpx;
}
.commititem-comments__desc {
  padding-top: 8rpx;
  color: #555;
  font-size: 28rpx;
}
.commititem-comments__content {
  padding-top: 16rpx;
  font-size: 34rpx;
}
.commititem-comments__content .wemark_wrapper {
  margin: 0;
  padding: 0;
}
.commititem-comments__content .wemark_block_p {
  margin: 0;
  padding: 0;
}