/* select页面的搜索框 */
.search-bar {
  display: flex;
  background-color: #EFEFF4;
  padding: 16rpx 20rpx;
}
.search-bar__form {
  flex: 1;
  background-color: #fff;
  border-radius: 6rpx;
  text-align: center;
}
.search-bar__box {
  display: flex;
  align-items: center;
  margin-left:20rpx;
}
.search-bar__input {
  display: inline-flex;
  flex: 1;
  text-align: left;
  height: 48rpx;
  line-height: 54rpx;
  min-height: 48rpx;
}
.search-bar__input-placeholder {
  color: #999;
  font-size: 24rpx;
  text-align: left;
}
.search-bar__btn-cancle {
  font-size:26rpx;
  font-weight:400;
  color:#FF9900;
  height: 48rpx;
  line-height: 50rpx;
  padding:0 8rpx 0 18rpx;
  margin-right:-18rpx;
}
.search-bar__input-toces {
  height: 48rpx;
}
.search-bar__input-icon {
  vertical-align: middle;
  margin-right: 10rpx;
}
.search-bar__input-toces--tips {
  color: #999;
  font-size: 24rpx;
  display: inline-flex;
  height: 100%;
  line-height: 55rpx;
  vertical-align: middle;
}