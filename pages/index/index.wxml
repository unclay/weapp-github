<!--index.wxml-->
<view class="container">
  <text>{{errText}}</text>
  <view class="button-group" style="margin: 20rpx 80rpx 10rpx;">
    <view bindtap="sinceTab" data-since="today" class="button-tab--item button-tab--item-first {{trending.since === 'today' ? 'active': ''}}">today</view>
    <view bindtap="sinceTab" data-since="weekly" class="button-tab--item {{trending.since === 'weekly' ? 'active': ''}}">this week</view>
    <view bindtap="sinceTab" data-since="monthly" class="button-tab--item button-tab--item-last {{trending.since === 'monthly' ? 'active': ''}}">this month</view>
  </view>
    
    
  <view class="panel">
    <view class="panel__bd">
      <!-- <navigator class="media-box">
        <view class="media-box__bottom-line"></view>
        <view class="media-box__hd">
          <image class="media-box__thumb" src="http://placeholder.qiniudn.com/60x60/3cc51f/ffffff"></image>
        </view>
        <view class="media-box__bd">
          <text class="media-box__title">标题一</text>
          <text class="media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</text>
        </view>
      </navigator> -->
      <navigator wx:for="{{trendingList}}" wx:key="unique" for-index="index" wx:for-item="item" class="media-box">
        <view class="media-box__bottom-line"></view>
        <view class="media-box__hd">
          <image class="media-box__thumb" src="{{item.avatar}}"></image>
        </view>
        <view class="media-box__bd">
          <view style="display: flex; padding: 8rpx 0;">
            <text class="media-box__title">{{item.owner}}/{{item.repo}}</text>
            <text class="text_star">{{item.stars}}★</text>
          </view>
          
          <text class="media-box__desc">{{item.desc || item.full_name}}</text>
        </view>
        
      </navigator>
    </view>
    <view class="panel__ft"></view>
  </view>
</view>
